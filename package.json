{
  "name": "mcp-project-tracker",
  "version": "3.0.0",
  "description": "MCP server for project/task tracking with dependencies, history, web UI and SQLite",
  "main": "src/mcp-server.js",
  "type": "module",
  "scripts": {
    "start:mcp": "node src/mcp-server.js",
    "start:web": "node src/web-server.js",
    "start:web:3001": "node src/web-server.js 3001",
    "start:web:8080": "node src/web-server.js 8080",
    "dev": "concurrently \"npm run start:mcp\" \"npm run start:web\"",
    "dev:3001": "concurrently \"npm run start:mcp\" \"npm run start:web:3001\"",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:mcp": "node scripts/mcp-smoke-test.js"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {}
  },
  "keywords": [
    "mcp",
    "project-tracking",
    "tasks",
    "sqlite",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.4",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0"
  },
  "mcp": {
    "server": {
      "command": "node",
      "args": [
        "src/mcp-server.js"
      ],
      "env": {}
    }
  }
}