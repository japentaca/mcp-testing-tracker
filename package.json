{
  "name": "mcp-testing-server",
  "version": "1.0.0",
  "description": "MCP server for managing testing checklists with SQLite persistence and web interface",
  "main": "src/mcp-server.js",
  "type": "module",
  "scripts": {
    "start:mcp": "node src/mcp-server.js",
    "start:web": "node src/web-server.js",
    "start:web:3001": "node src/web-server.js 3001",
    "start:web:8080": "node src/web-server.js 8080",
    "dev": "concurrently \"npm run start:mcp\" \"npm run start:web\"",
    "dev:3001": "concurrently \"npm run start:mcp\" \"npm run start:web:3001\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "testing",
    "checklist",
    "sqlite",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "sqlite3": "^5.1.6",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "mcp": {
    "server": {
      "command": "node",
      "args": [
        "src/mcp-server.js"
      ],
      "env": {}
    }
  }
}